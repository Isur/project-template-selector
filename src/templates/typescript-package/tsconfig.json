{
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.test.ts"],
    "compilerOptions": {
      "outDir": "./dist",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": true,
      "module": "CommonJS",
      "target": "ESNext",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "baseUrl": "src",
    }
  }

